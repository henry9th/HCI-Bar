<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.techtown.barvel.historyScreen">

    <TextView
        android:id="@+id/historyItem"
        android:layout_width="184dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:gravity="left|center"
        android:onClick="onClickNext"
        android:text="Negroni"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="102dp"
        android:layout_height="136dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/cocktail"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="36dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="181dp"
        android:layout_height="36dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="A cocktail made from gin, vermouth, and Campari."
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/historyItem" />

    <TextView
        android:id="@+id/backGroundColor"
        android:layout_width="406dp"
        android:layout_height="69dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="47dp"
        android:layout_height="28dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="QTY"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/historyItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="47dp"
        android:layout_height="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="+ 1"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/historyItem"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/buttona"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="161dp" />


</android.support.constraint.ConstraintLayout>

